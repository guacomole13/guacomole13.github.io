---
/**
 * SocialIcons - Inline SVG social icons with accessibility
 *
 * Renders Instagram, YouTube, and LinkedIn icons as inline SVGs only (no text).
 * Icons are displayed in bordered squares with hover effects.
 */

interface SocialLink {
    platform: "instagram" | "youtube" | "linkedin";
    url: string;
}

interface Props {
    links: SocialLink[];
    class?: string;
}

const { links, class: className } = Astro.props;

const platformLabels: Record<string, string> = {
    instagram: "Instagram",
    youtube: "YouTube",
    linkedin: "LinkedIn",
};
---

{
    links && links.length > 0 && (
        <div class:list={["social-icons", className]}>
            {links.map((link) => (
                <a
                    href={link.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label={`Follow on ${platformLabels[link.platform]}`}
                    class="social-icon"
                >
                    {link.platform === "instagram" && (
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <rect
                                x="2"
                                y="2"
                                width="20"
                                height="20"
                                rx="5"
                                ry="5"
                            />
                            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" />
                            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5" />
                        </svg>
                    )}
                    {link.platform === "youtube" && (
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z" />
                            <polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02" />
                        </svg>
                    )}
                    {link.platform === "linkedin" && (
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z" />
                            <rect x="2" y="9" width="4" height="12" />
                            <circle cx="4" cy="4" r="2" />
                        </svg>
                    )}
                </a>
            ))}
        </div>
    )
}

<style>
    .social-icons {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .social-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        color: var(--color-text-muted);
        border: 1px solid var(--color-border);
        transition:
            color 0.2s ease,
            border-color 0.2s ease;
    }

    .social-icon:hover {
        color: var(--color-text);
        border-color: var(--color-border-strong);
    }

    .social-icon:focus-visible {
        outline: 2px solid var(--color-text);
        outline-offset: 2px;
    }
</style>
